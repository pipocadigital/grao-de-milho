root = true

[*]
end_of_line = lf
indent_style = tab
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4
block_comment_start = /*
block_comment = *
block_comment_end = */
